<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../../partials/head") %>
    <title>Boardgames</title>
</head>
<body>
    <h1>All Boardgames</h1>
    <a href="/boardgames/new">Add new boardgame</a>
    <a href="/admin">Back to Admin screen</a>
    <% for (let boardgame of boardgames) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= boardgame.imagesrc %>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= boardgame.name %></h5>
                        <div class="card-text">
                            <p>$<%= boardgame.price %></p>
                            <p><%= boardgame.category %></p>
                            <p><a href="/boardgames/<%= boardgame.id %>">View</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</body>
</html>